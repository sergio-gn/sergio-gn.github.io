---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Services</div>
  </div>

  <HorizontalCard
    title="Website Development"
    img="/webdevelopment.webp"
    desc="Website development from scratch following the best SEO practices"
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="SEO Technical Optimization"
    img="/seo-op.webp"
    desc="Optimize pre existing websites with the best practices of Technical SEO Development. Implement SEO Strategies on the process."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Web App Development"
    img="/wep-app.webp"
    desc="Develop a software project with custom requirements for your business needs."
    url="#"
  />